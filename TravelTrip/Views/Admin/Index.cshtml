@using TravelTrip.Models.Classes
@model List<TravelTrip.Models.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Blog List</h2>
<br />
<a href="/Admin/NewBlog/" class="btn btn-primary" style="margin-bottom:30px">New Blog</a>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Header</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.Header</td>
            <td><a href="/Admin/DeleteBlog/@x.Id" class="btn btn-danger">Delete</a></td>
            <td><a href="/Admin/UpdateBlog/@x.Id" class="btn btn-warning">Update</a></td>
        </tr>
    }
</table>

