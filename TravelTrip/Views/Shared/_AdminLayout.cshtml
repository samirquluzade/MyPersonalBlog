
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<title>W3.CSS</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/sweetalert/sweet-alert.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:15%">
        <h3 class="w3-bar-item">Menu</h3>
        <a href="/Admin/Index/" class="w3-bar-item w3-button">Blog</a>
        <a href="/Admin/ListComments/" class="w3-bar-item w3-button">Comment</a>
        <a href="https://localhost:44345/" class="w3-bar-item w3-button">Go to site</a>
        <a href="/Login/Logout/" class="w3-bar-item w3-button">Logout</a>
    </div>

    <!-- Page Content -->
    <div style="margin-left:15%">

        <div class="w3-container w3-teal">
            <h3>Admin Panel</h3>
        </div>
        <div class="w3-container">
            @RenderBody()
        </div>

    </div>
</body>
</html>
